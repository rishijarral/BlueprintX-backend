# Environment: dev | staging | prod
ENV=dev

# Server
SERVER_ADDR=0.0.0.0:8080

# Database
DATABASE_URL=postgres://postgres:postgres@db:5432/blueprintx
DATABASE_MAX_CONNECTIONS=10

# Redis (for caching)
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL_SECONDS=3600

# AI Service (Python LLM service)
AI_SERVICE_URL=http://ai-service:8000
AI_SERVICE_TOKEN=your-secure-internal-token-here
AI_SERVICE_TIMEOUT_SECONDS=120

# CORS (comma-separated origins)
CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Supabase Auth - JWT Verification
# Replace with your Supabase project values
SUPABASE_JWT_JWKS_URL=https://YOUR_PROJECT_REF.supabase.co/auth/v1/.well-known/jwks.json
SUPABASE_JWT_ISSUER=https://YOUR_PROJECT_REF.supabase.co/auth/v1
SUPABASE_JWT_AUDIENCE=authenticated

# JWKS cache TTL in seconds (default: 1800 = 30 minutes)
JWKS_CACHE_TTL_SECONDS=1800

# Logging
RUST_LOG=blueprintx_backend=debug,tower_http=debug,info
